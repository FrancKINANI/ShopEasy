<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ✅ Disable cleartext (HTTP) traffic for all domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">firebaseio.com</domain>
        <domain includeSubdomains="true">firebaseapp.com</domain>
        <domain includeSubdomains="true">firebasehosting.app</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">google.com</domain>
    </domain-config>

    <!-- ✅ Allow dev environment to use HTTP (remove in production) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.0.0/8</domain>
        <domain includeSubdomains="true">172.16.0.0/12</domain>
        <domain includeSubdomains="true">192.168.0.0/16</domain>
    </domain-config>

    <!-- Trust user-installed CAs for debugging (remove in production) -->
    <trust-anchors>
        <certificates src="system" />
        <!-- Uncomment for production only
        <certificates src="@raw/firebase_cert" />
        -->
    </trust-anchors>
</network-security-config>