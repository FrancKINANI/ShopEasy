<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/gray_50">

    <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@android:color/transparent" app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout android:layout_width="match_parent" android:layout_height="280dp" app:layout_scrollFlags="scroll|exitUntilCollapsed" app:contentScrim="@color/primary">

            <!-- Deep Navy Header Background -->
            <View android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/primary"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center" android:layout_marginTop="60dp" app:layout_collapseMode="parallax">

                <com.google.android.material.imageview.ShapeableImageView android:id="@+id/ivProfile" android:layout_width="100dp" android:layout_height="100dp" android:src="@android:drawable/ic_menu_myplaces" android:scaleType="centerCrop" app:shapeAppearance="@style/ShapeAppearance.App.CircularShape" app:strokeColor="@color/white" app:strokeWidth="2dp" android:padding="2dp" android:background="@color/white"/>

                <TextView android:id="@+id/tvUserName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="John Doe" android:textSize="22sp" android:fontFamily="@font/poppins_bold" android:textColor="@color/white" android:layout_marginTop="12dp" />

                <TextView android:id="@+id/tvUserEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="john.doe@example.com" android:textSize="14sp" android:fontFamily="@font/inter_regular" android:textColor="@color/gray_100" />
            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/shape_bottom_sheet_bg" android:layout_marginTop="-30dp" app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp">

            <!-- Edit Profile Action -->
            <com.google.android.material.button.MaterialButton android:id="@+id/btnEditProfile" android:layout_width="match_parent" android:layout_height="56dp" android:text="Modifier le profil" android:textSize="14sp" android:fontFamily="@font/poppins_semibold" android:textColor="@color/primary" android:backgroundTint="@color/white" app:strokeColor="@color/primary" app:strokeWidth="1dp" app:cornerRadius="12dp" android:layout_marginBottom="32dp"/>

            <!-- Settings Section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Préférences" android:textSize="18sp" android:fontFamily="@font/poppins_bold" android:textColor="@color/black" android:layout_marginBottom="16dp" />

            <!-- Dark Mode Item -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:background="@color/white" android:padding="16dp" android:layout_marginBottom="16dp" android:elevation="2dp">

                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_day" app:tint="@color/primary" android:layout_marginEnd="16dp"/>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mode Sombre" android:fontFamily="@font/poppins_semibold" android:textColor="@color/black" />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Protéger vos yeux" android:textSize="12sp" android:textColor="@color/gray_500" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch android:id="@+id/switchDarkMode" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Notifications Item -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:background="@color/white" android:padding="16dp" android:layout_marginBottom="32dp" android:elevation="2dp">

                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_popup_reminder" app:tint="@color/accent" android:layout_marginEnd="16dp"/>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Notifications" android:fontFamily="@font/poppins_semibold" android:textColor="@color/black" />
                </LinearLayout>

                <com.google.android.material.materialswitch.MaterialSwitch android:id="@+id/switchNotifications" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" />
            </LinearLayout>

            <!-- Account Section -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Compte" android:textSize="18sp" android:fontFamily="@font/poppins_bold" android:textColor="@color/black" android:layout_marginBottom="16dp" />

            <TextView android:id="@+id/helpSupport" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Aide &amp; Support" android:padding="16dp" android:background="@color/white" android:fontFamily="@font/poppins_semibold" android:layout_marginBottom="12dp"/>

            <TextView android:id="@+id/about" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="À propos" android:padding="16dp" android:background="@color/white" android:fontFamily="@font/poppins_semibold" android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton android:id="@+id/btnLogout" android:layout_width="match_parent" android:layout_height="56dp" android:text="Se Déconnecter" android:textSize="14sp" android:fontFamily="@font/poppins_bold" android:textColor="@color/error" android:backgroundTint="@color/error_light" app:cornerRadius="12dp" app:icon="@drawable/ic_close" app:iconTint="@color/error" app:iconGravity="textStart"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
