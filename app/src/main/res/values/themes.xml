<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopEasy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Tertiary -->
        <item name="colorTertiary">@color/info</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- ==================== TYPOGRAPHY STYLES ==================== -->
    
    <!-- Display Styles -->
    <style name="Typography.Display.Large" parent="">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Typography.Display.Medium" parent="">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Heading Styles -->
    <style name="Typography.Heading.Large" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Heading.Medium" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Heading.Small" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Body Styles -->
    <style name="Typography.Body.Large" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="Typography.Body.Medium" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="Typography.Body.Small" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <!-- Label Styles -->
    <style name="Typography.Label" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- ==================== COMPONENT STYLES ==================== -->

    <!-- Premium Button Style -->
    <style name="Button.Premium" parent="Widget.Material3.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Text Input Style -->
    <style name="TextInput.Premium" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/gray_300</item>
        <item name="android:textColorHint">@color/gray_500</item>
    </style>

    <!-- Card Style -->
    <style name="Card.Premium" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Circular Shape for Profile Picture -->
    <style name="ShapeAppearance.App.CircularShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>